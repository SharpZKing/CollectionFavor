<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f9f9f9">
    
    <LinearLayout
        android:id="@+id/account_before_login"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@android:color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#999"
            />

        <TextView
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:text="登入, 体验更多功能"
            android:textSize="15sp"/>
        
        <Button
            android:id="@+id/account_btn_gologin"
            android:layout_marginTop="14dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:textSize="13sp"
            android:textColor="@color/colorPrimary"
            android:text="登入/注册"
            android:background="@drawable/button_bg"/>

        <View
            android:layout_marginTop="18dp"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#999"
            />

    </LinearLayout>

    <!--    =========================================   -->
    <LinearLayout
        android:id="@+id/account_after_login"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@android:color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#999"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_marginTop="11dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/profile_image"
                    android:layout_width="66dp"
                    android:layout_height="66dp"
                    android:src="@drawable/bear"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/colorPrimary"/>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/account_username"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="钟嘉烽"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/account_desc"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="这个人很懒，什么都没留下....."
                    android:textSize="16sp"/>

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e9e9e9"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/account_details"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@android:color/white"
        android:orientation="vertical">

        <View
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e9e9e9"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginLeft="16dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/email"/>

            <LinearLayout
                android:layout_marginLeft="12dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/account_email"
                    android:gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textSize="16sp"
                    android:text="邮箱 ( zjfsharp@sina.cn )"/>

                <View
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e9e9e9"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginLeft="16dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/collection"/>

            <LinearLayout
                android:layout_marginLeft="12dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textSize="16sp"
                    android:text="我的收藏数 ( 0 ) "/>

                <View
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e9e9e9"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="16dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/time"/>

            <LinearLayout
                android:layout_marginLeft="12dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textSize="16sp"
                    android:text="我的时光机 ( 0 ) "/>

                <!--<View
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#999"/>-->

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e9e9e9"
            />

    </LinearLayout>
    <!--    =========================================   -->

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/white"
        android:orientation="vertical">

        <View
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e9e9e9"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/setting"
                android:layout_width="16dp"
                android:layout_height="16dp" />

            <TextView
                android:id="@+id/account_setting"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:textSize="18sp"
                android:text="设置"/>

        </LinearLayout>

        <View
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#999"
            />
    </LinearLayout>

</LinearLayout>
